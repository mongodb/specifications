{
  "description": "rediscovery-quickly-after-step-down",
  "schemaVersion": "1.0",
  "runOnRequirements": [
    {
      "minServerVersion": "4.4",
      "topologies": [
        "replicaset"
      ]
    }
  ],
  "createEntities": [
    {
      "client": {
        "id": "client0",
        "observeEvents": [
          "commandStartedEvent",
          "serverDescriptionChangedEvent",
          "poolClearedEvent"
        ],
        "uriOptions": {
          "appName": "replSetStepDownTest",
          "heartbeatFrequencyMS": 60000,
          "serverSelectionTimeoutMS": 5000,
          "w": "majority"
        }
      }
    },
    {
      "database": {
        "id": "database0",
        "client": "client0",
        "databaseName": "sdam-tests"
      }
    },
    {
      "collection": {
        "id": "collection0",
        "database": "database0",
        "collectionName": "test-replSetStepDown"
      }
    },
    {
      "client": {
        "id": "client1"
      }
    },
    {
      "database": {
        "id": "database1",
        "client": "client1",
        "databaseName": "admin"
      }
    }
  ],
  "initialData": [
    {
      "collectionName": "test-replSetStepDown",
      "databaseName": "sdam-tests",
      "documents": [
        {
          "_id": 1
        },
        {
          "_id": 2
        }
      ]
    }
  ],
  "tests": [
    {
      "description": "Rediscover quickly after replSetStepDown",
      "operations": [
        {
          "name": "insertMany",
          "object": "collection0",
          "arguments": {
            "documents": [
              {
                "_id": 3
              },
              {
                "_id": 4
              }
            ]
          }
        },
        {
          "name": "recordTopologyDescription",
          "object": "testRunner",
          "arguments": {
            "client": "client0",
            "id": "topology0"
          }
        },
        {
          "name": "runCommand",
          "object": "database1",
          "arguments": {
            "commandName": "replSetFreeze",
            "command": {
              "replSetFreeze": 0
            },
            "readPreference": {
              "mode": "Secondary"
            }
          }
        },
        {
          "name": "runCommand",
          "object": "database1",
          "arguments": {
            "commandName": "replSetStepDown",
            "command": {
              "replSetStepDown": 30,
              "secondaryCatchUpPeriodSecs": 30,
              "force": false
            }
          }
        },
        {
          "name": "waitForPrimaryChange",
          "object": "testRunner",
          "arguments": {
            "client": "client0",
            "priorTopologyDescription": "topology0",
            "timeoutMS": 15000
          }
        },
        {
          "name": "insertMany",
          "object": "collection0",
          "arguments": {
            "documents": [
              {
                "_id": 5
              },
              {
                "_id": 6
              }
            ]
          }
        },
        {
          "name": "assertEventCount",
          "object": "testRunner",
          "arguments": {
            "client": "client0",
            "event": {
              "poolClearedEvent": {}
            },
            "count": 0
          }
        }
      ],
      "expectEvents": [
        {
          "client": "client0",
          "eventType": "command",
          "events": [
            {
              "commandStartedEvent": {
                "command": {
                  "insert": "test-replSetStepDown",
                  "documents": [
                    {
                      "_id": 3
                    },
                    {
                      "_id": 4
                    }
                  ]
                },
                "commandName": "insert",
                "databaseName": "sdam-tests"
              }
            },
            {
              "commandStartedEvent": {
                "command": {
                  "insert": "test-replSetStepDown",
                  "documents": [
                    {
                      "_id": 5
                    },
                    {
                      "_id": 6
                    }
                  ]
                },
                "commandName": "insert",
                "databaseName": "sdam-tests"
              }
            }
          ]
        }
      ],
      "outcome": [
        {
          "collectionName": "test-replSetStepDown",
          "databaseName": "sdam-tests",
          "documents": [
            {
              "_id": 1
            },
            {
              "_id": 2
            },
            {
              "_id": 3
            },
            {
              "_id": 4
            },
            {
              "_id": 5
            },
            {
              "_id": 6
            }
          ]
        }
      ]
    }
  ]
}
