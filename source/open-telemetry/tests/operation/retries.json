{
  "description": "retrying failed command",
  "schemaVersion": "1.26",
  "createEntities": [
    {
      "client": {
        "id": "client0",
        "useMultipleMongoses": false,
        "observeTracingMessages": {
          "enableCommandPayload": true
        }
      }
    },
    {
      "client": {
        "id": "failPointClient",
        "useMultipleMongoses": false
      }
    },
    {
