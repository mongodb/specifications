                    "db.system": "mongodb",
                    "db.namespace": "operation-find-retries",
                    "db.collection.name": "test",
                    "db.command.name": "find",
                    "network.transport": "tcp",
                    "db.mongodb.cursor_id": {
                      "$$exists": false
                    },
                    "db.response.status_code": 89,
                    "exception.message": {
                      "$$exists": true
                    },
                    "exception.type": {
                      "$$exists": true
                    },
                    "exception.stacktrace": {
