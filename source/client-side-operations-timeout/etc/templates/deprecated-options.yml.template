          session: *session
      - name: abortTransaction
        object: *session
        arguments:
          timeoutMS: 10000

  - description: "abortTransaction ignores wTimeoutMS if timeoutMS is set"
    operations:
      - name: createEntities
        object: testRunner
        arguments:
          entities:
            - client:
                id: &client client
