{
  "description": "findOneAndReplace -comment",
  "schemaVersion": "1.0",
  "runOnRequirements": [
    {
      "minServerVersion": "4.4"
    }
  ],
  "createEntities": [
    {
      "client": {
        "id": "client0",
        "observeEvents": [
          "commandStartedEvent"
        ]
      }
    },
    {
      "database": {
        "id": "database0",
        "client": "client0",
        "databaseName": "crud-tests"
      }
    },
    {
      "collection": {
        "id": "collection0",
        "database": "database0",
        "collectionName": "coll0"
      }
    }
  ],
  "initialData": [
    {
      "collectionName": "coll0",
      "databaseName": "crud-tests",
      "documents": [
        {
          "_id": 1
        },
        {
          "_id": 2
        }
      ]
    }
  ],
  "tests": [
    {
      "description": "findOneAndReplace with string comment",
      "operations": [
        {
          "name": "findOneAndReplace",
          "object": "collection0",
          "arguments": {
            "filter": {
              "_id": 1
            },
            "replacement": {
              "x": 5
            },
            "comment": "comment"
          },
          "expectResult": {
            "_id": 1
          }
        }
      ],
      "expectEvents": [
        {
          "client": "client0",
          "events": [
            {
              "commandStartedEvent": {
                "command": {
                  "findAndModify": "coll0",
                  "query": {
                    "_id": 1
                  },
                  "update": {
                    "x": 5
                  },
                  "comment": "comment"
                }
              }
            }
          ]
        }
      ]
    },
    {
      "description": "findOneAndReplace with document comment",
      "operations": [
        {
          "name": "findOneAndReplace",
          "object": "collection0",
          "arguments": {
            "filter": {
              "_id": 1
            },
            "replacement": {
              "x": 5
            },
            "comment": {
              "key": "value"
            }
          },
          "expectResult": {
            "_id": 1
          }
        }
      ],
      "expectEvents": [
        {
          "client": "client0",
          "events": [
            {
              "commandStartedEvent": {
                "command": {
                  "findAndModify": "coll0",
                  "query": {
                    "_id": 1
                  },
                  "update": {
                    "x": 5
                  },
                  "comment": {
                    "key": "value"
                  }
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
