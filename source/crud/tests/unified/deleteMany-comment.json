{
  "description": "deleteMany-comment",
  "schemaVersion": "1.0",
  "runOnRequirements": [
    {
      "minServerVersion": "4.4"
    }
  ],
  "createEntities": [
    {
      "client": {
        "id": "client0",
        "observeEvents": [
          "commandStartedEvent"
        ]
      }
    },
    {
      "database": {
        "id": "database0",
        "client": "client0",
        "databaseName": "crud-tests"
      }
    },
    {
      "collection": {
        "id": "collection0",
        "database": "database0",
        "collectionName": "coll0"
      }
    }
  ],
  "initialData": [
    {
      "collectionName": "coll0",
      "databaseName": "crud-tests",
      "documents": [
        {
          "_id": 1
        },
        {
          "_id": 2
        }
      ]
    }
  ],
  "tests": [
    {
      "description": "deleteMany with string comment",
      "operations": [
        {
          "name": "deleteMany",
          "object": "collection0",
          "arguments": {
            "filter": {
              "_id": 1
            },
            "comment": "comment"
          },
          "expectResult": {
            "deletedCount": 1
          }
        }
      ],
      "expectEvents": [
        {
          "client": "client0",
          "events": [
            {
              "commandStartedEvent": {
                "command": {
                  "delete": "coll0",
                  "deletes": [
                    {
                      "q": {
                        "_id": 1
                      }
                    }
                  ],
                  "comment": "comment"
                }
              }
            }
          ]
        }
      ],
      "outcome": [
        {
          "collectionName": "coll0",
          "databaseName": "crud-tests",
          "documents": [
            {
              "_id": 2
            }
          ]
        }
      ]
    },
    {
      "description": "deleteMany with document comment",
      "operations": [
        {
          "name": "deleteMany",
          "object": "collection0",
          "arguments": {
            "filter": {
              "_id": 1
            },
            "comment": {
              "key": "value"
            }
          },
          "expectResult": {
            "deletedCount": 1
          }
        }
      ],
      "expectEvents": [
        {
          "client": "client0",
          "events": [
            {
              "commandStartedEvent": {
                "command": {
                  "delete": "coll0",
                  "deletes": [
                    {
                      "q": {
                        "_id": 1
                      }
                    }
                  ],
                  "comment": {
                    "key": "value"
                  }
                }
              }
            }
          ]
        }
      ],
      "outcome": [
        {
          "collectionName": "coll0",
          "databaseName": "crud-tests",
          "documents": [
            {
              "_id": 2
            }
          ]
        }
      ]
    }
  ]
}
